// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/alpine
{
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"shd101wyy.markdown-preview-enhanced",
				"vscjava.vscode-java-pack"
			]
		}
	},

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": [
		"cd $CODESPACE_VSCODE_FOLDER && $MY_RUBY_HOME/bin/gem install jwt && $MY_RUBY_HOME/bin/gem install octokit",
		"cd $CODESPACE_VSCODE_FOLDER && $PYTHON_PATH/bin/pip3 install PyJWT",
		"cd $CODESPACE_VSCODE_FOLDER/javascript && $NVM_BIN/npm install",
		"cd $CODESPACE_VSCODE_FOLDER/java/githubapp && $MAVEN_HOME/bin/mvn dependency:resolve"
	]

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
